<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/sliding_left_press</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/sliding_left_press</item>
        <!--ActionBar颜色-->
        <item name="colorPrimary">@color/sliding_left_press</item>
        <!--图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
        <!--自定义listDivider-->
        <item name="android:listDivider">@drawable/bg_recyclerview_divider</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme" >
        <!-- 窗口全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 窗口透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MainAppBar" parent="android:Widget">
        <item name="elevation">0dip</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="home_floor_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">#f1f1f1</item>
    </style>
    <style name="home_floor_color">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="home_floor_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="home_floor_line_biddle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_home</item>
    </style>

</resources>
